using Gtk 4.0;
using Adw 1;

ApplicationWindow main_window {
  default-width: 500;
  default-height: 200;
  Adw.Clamp {
    maximum-size: 500;

    Box {
      orientation: vertical;

      ListBox {
        selection-mode: none;

        Adw.ActionRow {
          title: bind greet_name.text;
        }

        Adw.EntryRow greet_name {
          title: "Enter name";
        }
      }
    }
  }
}
